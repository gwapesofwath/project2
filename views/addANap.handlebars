<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h2>Add your self!</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="napper-text">Napper</label>
            <input type="text" id="napper-text" class="form-control" aria-describedby="example-text" placeholder="UserName">
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3><a href="/users">View All Nappers</a></h3>
        <h3>User Added:</h3>
        <ul id="napper-list" class="list-group">
          {{#each loggedNaps}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="/user/{{this.id}}">{{this.name}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
