<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>Log a New Nap</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="napper-text">Napper</label>
            <input type="text" id="napper-text" class="form-control" aria-describedby="example-text" placeholder="UserName">
          </div>
          <div class="form-group">
            <label for="napper-text">Title</label>
            <input type="text" id="title-text" class="form-control" aria-describedby="example-text" placeholder="Title your dream">
          </div>
          <div class="form-group">
            <label for="example-description">Dream Description</label>
            <textarea class="form-control" id="dream-description" aria-describedby="example-description" placeholder="Describe your dream"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Examples:</h3>
        <ul id="napper-list" class="list-group">
          {{#each loggedNaps}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="user/{{this.id}}">{{this.name}}</a>
            <a href="entry/{{this.id}}"> {{this.dreamTitle}} </a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
